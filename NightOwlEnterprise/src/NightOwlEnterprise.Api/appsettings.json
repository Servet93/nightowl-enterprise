{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "NLog": {
      "IncludeScopes": true
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "extensions": [
      { "assembly": "NLog.Web.AspNetCore" },
      { "assembly": "NLog.AWS.Logger" }
    ],
    "time": {
      "type": "AccurateUTC"
    },
    "targets": {
      "file": {
        "type": "File",
        "layout": {
          "type": "JsonLayout",
          "Attributes": [
            {
              "name": "timestamp",
              "layout": "${date:format=o}"
            },
            {
              "name": "level",
              "layout": "${level:upperCase=true}"
            },
            {
              "name": "logger",
              "layout": "${logger}"
            },
            {
              "name": "message",
              "layout": "${message}"
            },
            {
              "name": "exception",
              "layout": "${exception:format=ToString,Data}"
            },
            {
              "name": "properties",
              "encode": false,
              "layout": {
                "type": "JsonLayout",
                "includeScopeProperties": "true"
              }
            }
          ]
        },
        "fileName": "${basedir}/logs/${shortdate}.log",
        "archiveEvery": "Day",
        "archiveFileName": "${basedir}/logs/archives/${shortdate}.{#####}.log"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "file"
      }
    ]
  },
  "AllowedHosts": "*",
  "RequireConfirmedEmail": false
}
